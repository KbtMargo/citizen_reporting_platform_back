generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  password      String
  firstName     String?
  lastName      String?
  role          UserRole       @default(RESIDENT)
  osbbId        String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  phone         String?
  notifications Notification[]
  reports       Report[]
  reportUpdates ReportUpdate[]
  osbb          OSBB?          @relation(fields: [osbbId], references: [id])
}

model OSBB {
  id             String   @id @default(cuid())
  name           String   @unique
  address        String?
  invitationCode String   @unique @default(cuid())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  members        User[]
}

model Report {
  id            String                    @id @default(cuid())
  title         String
  description   String?
  lat           Decimal                   @db.Decimal(9, 6)
  lng           Decimal                   @db.Decimal(9, 6)
  geom          Unsupported("geography")?
  status        ReportStatus              @default(NEW)
  authorId      String
  categoryId    String
  recipientId   String
  createdAt     DateTime                  @default(now())
  updatedAt     DateTime                  @updatedAt
  address       String?
  priority      ReportPriority            @default(NORMAL)
  files         File[]
  notifications Notification[]
  author        User                      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category      Category                  @relation(fields: [categoryId], references: [id])
  recipient     Recipient                 @relation(fields: [recipientId], references: [id])
  updates       ReportUpdate[]

  @@index([authorId])
  @@index([categoryId])
  @@index([recipientId])
  @@index([status])
}

model Category {
  id      String   @id @default(cuid())
  name    String   @unique
  icon    String?
  reports Report[]
}

model Recipient {
  id          String   @id @default(cuid())
  name        String   @unique
  contactInfo String?
  reports     Report[]
}

model ReportUpdate {
  id          String   @id @default(cuid())
  description String
  reportId    String
  authorId    String
  createdAt   DateTime @default(now())
  author      User     @relation(fields: [authorId], references: [id])
  report      Report   @relation(fields: [reportId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String               @id @default(cuid())
  title     String
  message   String
  type      NotificationType     @default(STATUS_UPDATE)
  priority  NotificationPriority @default(NORMAL)
  isRead    Boolean              @default(false)
  userId    String
  reportId  String?
  createdAt DateTime             @default(now())
  report    Report?              @relation(fields: [reportId], references: [id])
  user      User                 @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([reportId])
  @@index([isRead, createdAt])
}

model File {
  id        String   @id @default(cuid())
  bucket    String
  key       String   @unique
  mime      String?
  bytes     Int?
  reportId  String?
  createdAt DateTime @default(now())
  report    Report?  @relation(fields: [reportId], references: [id])
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model spatial_ref_sys {
  srid      Int     @id
  auth_name String? @db.VarChar(256)
  auth_srid Int?
  srtext    String? @db.VarChar(2048)
  proj4text String? @db.VarChar(2048)
}

enum UserRole {
  RESIDENT
  OSBB_ADMIN
  ADMIN
}

enum ReportStatus {
  NEW
  IN_PROGRESS
  DONE
  REJECTED
}

enum NotificationType {
  STATUS_UPDATE
  RESPONSE
  REMINDER
  SYSTEM
}

enum NotificationPriority {
  URGENT
  NORMAL
  LOW
}

enum ReportPriority {
  LOW
  NORMAL
  URGENT
}
